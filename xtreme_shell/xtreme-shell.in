#!/usr/bin/env python3

# You can move this file to your ~/.local/bin or another path

import sys
import os

PKG_DATA_DIR = "@pkgdatadir@"
VERSION = "@VERSION@"

sys.path.insert(1, PKG_DATA_DIR)


if __name__ == "__main__":
    from gi.repository import Gio

    resource = Gio.Resource.load(
        os.path.join(PKG_DATA_DIR, "xtreme_shell", "data", "xtreme-shell.gresource")
    )
    resource._register()
    argv = sys.argv

    from xtreme_shell.main import run

    argv.pop(0)
    run(argv)
